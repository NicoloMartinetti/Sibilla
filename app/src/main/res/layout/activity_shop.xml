<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#780081"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".ShopActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <LinearLayout
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/rounded_money"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24dp"
                    android:clickable="true"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/_671120119165"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_baseline_person_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/faq"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/_671117952194__1_"
                app:layout_constraintBottom_toBottomOf="@+id/account"
                app:layout_constraintEnd_toStartOf="@id/account"
                app:layout_constraintTop_toTopOf="@+id/account" />

            <ImageButton
                android:id="@+id/backArrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/faq" />

            <ImageButton
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="27dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/faq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/backArrow" />

            <LinearLayout
                android:id="@+id/share"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_shop"
                android:backgroundTint="#E27CD8"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/backArrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/monete">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/condivisione"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="100"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textSize="16dp"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="INVITA UN AMICO"/>

            </LinearLayout>

            <Button
                android:id="@+id/invita"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_border"
                android:text="@string/invita"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:paddingVertical="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/share"
                app:layout_constraintStart_toStartOf="@+id/share"
                app:layout_constraintTop_toBottomOf="@+id/share" />

            <LinearLayout
                android:id="@+id/monete"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_shop"
                android:backgroundTint="#E27CD8"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/backArrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/invita">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/monete"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="100"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="0,99 €"/>

            </LinearLayout>

            <Button
                android:id="@+id/acquistaMonete"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_border"
                android:text="@string/acquista"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:paddingVertical="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/monete"
                app:layout_constraintStart_toStartOf="@+id/monete"
                app:layout_constraintTop_toBottomOf="@+id/monete" />

            <LinearLayout
                android:id="@+id/money"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_shop"
                android:backgroundTint="#E27CD8"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/invita"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/soldoni">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/money"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="500"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="3,99 €"/>

            </LinearLayout>

            <Button
                android:id="@+id/acquistaMoney"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_border"
                android:text="@string/acquista"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:paddingVertical="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/money"
                app:layout_constraintStart_toStartOf="@+id/money"
                app:layout_constraintTop_toBottomOf="@+id/money" />

            <LinearLayout
                android:id="@+id/soldoni"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_shop"
                android:backgroundTint="#E27CD8"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/acquistaMonete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/money">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/soldoni"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="1000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="8,99 €"/>

            </LinearLayout>

            <Button
                android:id="@+id/acquistaSoldoni"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_border"
                android:text="@string/acquista"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:paddingVertical="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/soldoni"
                app:layout_constraintStart_toStartOf="@+id/soldoni"
                app:layout_constraintTop_toBottomOf="@+id/soldoni" />

            <LinearLayout
                android:id="@+id/bottino"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_shop"
                android:backgroundTint="#E27CD8"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/acquistaMoney"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/queen">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/bottino"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="2000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="16,99 €"/>

            </LinearLayout>

            <Button
                android:id="@+id/acquistaBottino"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_border"
                android:text="@string/acquista"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:paddingVertical="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/bottino"
                app:layout_constraintStart_toStartOf="@+id/bottino"
                app:layout_constraintTop_toBottomOf="@+id/bottino" />

            <LinearLayout
                android:id="@+id/queen"
                android:layout_width="130dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_shop"
                android:backgroundTint="#E27CD8"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/acquistaSoldoni"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/bottino">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/queen"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="2500"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="#780081"
                    android:textAlignment="center"
                    android:text="20,99 €"/>

            </LinearLayout>

            <Button
                android:id="@+id/acquistaQueen"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_border"
                android:text="@string/acquista"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@null"
                android:paddingVertical="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/queen"
                app:layout_constraintStart_toStartOf="@+id/queen"
                app:layout_constraintTop_toBottomOf="@+id/queen" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>