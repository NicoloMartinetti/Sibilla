<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#780081"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".InfoDetail1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="50dp">

            <LinearLayout
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/rounded_money"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="24dp"
                    android:clickable="true"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="5dp"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginVertical="5dp"
                    android:src="@drawable/_671120119165"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_baseline_person_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/faq"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/_671117952194__1_"
                app:layout_constraintBottom_toBottomOf="@+id/account"
                app:layout_constraintEnd_toStartOf="@id/account"
                app:layout_constraintTop_toTopOf="@+id/account" />

            <ImageButton
                android:id="@+id/backArrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/faq" />

            <ImageButton
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="27dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/faq" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/l_oracolo_della_sibilla"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backArrow" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info1_1"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:paddingHorizontal="40dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/textView"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/fin1840"
                android:layout_marginVertical="40dp"
                app:layout_constraintTop_toBottomOf="@id/text1"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info1_2"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:paddingHorizontal="40dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/image"/>

            <Button
                android:id="@+id/avanti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shop"
                app:backgroundTint="@null"
                android:text="@string/vai_avanti"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="100dp"
                app:layout_constraintTop_toBottomOf="@id/text2"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>